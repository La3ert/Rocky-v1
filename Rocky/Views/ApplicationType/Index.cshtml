@model IEnumerable<Rocky.Models.ApplicationType>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>Create Application Type
            </a>
        </div>
    </div>
    
    <br/><br/>
    
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>
                    Application Type Name
                </th>
                
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width:50%>@obj.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                    <i class="fa-solid fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type exist.</p>
    }
</div>